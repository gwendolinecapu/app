rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ============================================
    // Helper Functions
    // ============================================
    
    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Check if user owns the document via system_id or userId field
    function isOwner(resource) {
      return isAuthenticated() && (
        resource.data.system_id == request.auth.uid || 
        resource.data.userId == request.auth.uid ||
        resource.data.systemId == request.auth.uid
      );
    }
    
    // Check ownership for create operations
    function isOwnerCreate() {
      return isAuthenticated() && (
        request.resource.data.system_id == request.auth.uid ||
        request.resource.data.userId == request.auth.uid ||
        request.resource.data.systemId == request.auth.uid
      );
    }

    // Check for admin privileges
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/systems/$(request.auth.uid)).data.isAdmin == true;
    }

    // ============================================
    // Systems Collection
    // ============================================
    match /systems/{systemId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == systemId;

      match /friend_suggestions/{suggestionId} {
        allow read, write: if isAuthenticated() && request.auth.uid == systemId;
      }
    }

    // ============================================
    // Alters Collection
    // ============================================
    match /alters/{alterId} {
      allow read: if isAuthenticated();
      allow create: if isOwnerCreate();
      allow update, delete: if isOwner(resource);
    }
    
    // ============================================
    // Posts Collection
    // ============================================
    match /posts/{postId} {
      allow read: if isAuthenticated();
      allow create: if isOwnerCreate();
      allow update: if isOwner(resource) || (
        isAuthenticated() && 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'comments_count'])
      );
      allow delete: if isOwner(resource);
      
      match /comments/{commentId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated();
        allow delete: if isAuthenticated() && (
          request.auth.uid == resource.data.author_id || 
          isOwner(get(/databases/$(database)/documents/posts/$(postId)))
        );
      }
    }

    // ============================================
    // Friend Requests Collection
    // ============================================
    match /friend_requests/{requestId} {
      // Read: Sender OR Receiver (via systemId or lookup)
      allow read: if isAuthenticated() && (
        resource.data.systemId == request.auth.uid ||
        resource.data.receiverSystemId == request.auth.uid ||
        // Fallback for legacy requests where receiverSystemId might be missing
        get(/databases/$(database)/documents/alters/$(resource.data.receiverId)).data.systemId == request.auth.uid
      );
      
      // Create: Sender only
      allow create: if isAuthenticated() && 
                    request.resource.data.systemId == request.auth.uid &&
                    request.resource.data.createdAt == request.time;
      
      // Update: Receiver only (to accept/reject)
      allow update: if isAuthenticated() && (
         resource.data.receiverSystemId == request.auth.uid ||
         get(/databases/$(database)/documents/alters/$(resource.data.receiverId)).data.systemId == request.auth.uid
      ) && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status']);
      
      // Delete: Sender or Receiver
      allow delete: if isAuthenticated() && (
         resource.data.systemId == request.auth.uid || 
         resource.data.receiverSystemId == request.auth.uid ||
         get(/databases/$(database)/documents/alters/$(resource.data.receiverId)).data.systemId == request.auth.uid
      );
    }

    // ============================================
    // Friendships Collection
    // ============================================
    match /friendships/{friendshipId} {
      // Read: any authenticated user (needed for checkStatus)
      allow read: if isAuthenticated();
      
      // Create: user must be one of the systems involved
      allow create: if isAuthenticated() && (
        request.resource.data.systemId == request.auth.uid ||
        request.resource.data.friendSystemId == request.auth.uid
      );
      
      // Delete: involved system
      allow delete: if isAuthenticated() && (
        resource.data.systemId == request.auth.uid ||
        resource.data.friendSystemId == request.auth.uid ||
        resource.data.system_id == request.auth.uid
      );
    }
    
    // ============================================
    // Emotions, Journal, Fronting, Tasks, Roles, Inner World
    // ============================================
    match /emotions/{emotionId} {
      allow read: if isOwner(resource);
      allow create: if isOwnerCreate();
      allow update, delete: if isOwner(resource);
    }

    match /journal_entries/{entryId} {
      allow read: if isOwner(resource);
      allow create: if isOwnerCreate();
      allow update, delete: if isOwner(resource);
    }

    match /fronting_history/{entryId} {
      allow read: if isOwner(resource);
      allow create: if isOwnerCreate();
      allow update, delete: if isOwner(resource);
    }

    match /tasks/{taskId} {
      allow read: if isOwner(resource);
      allow create: if isOwnerCreate();
      allow update, delete: if isOwner(resource);
    }

    match /roles/{roleId} {
      allow read: if isOwner(resource);
      allow create: if isOwnerCreate();
      allow update, delete: if isOwner(resource);
    }

    match /subsystems/{subsystemId} {
      allow read: if isAuthenticated() && resource.data.parent_system_id == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.parent_system_id == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.parent_system_id == request.auth.uid;
    }

    match /help_requests/{requestId} {
      allow read: if isOwner(resource);
      allow create: if isOwnerCreate();
      allow update, delete: if isOwner(resource);
    }

    // ============================================
    // Groups Collection
    // ============================================
    match /groups/{groupId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        resource.data.created_by == request.auth.uid ||
        request.auth.uid in resource.data.members
      );
      allow delete: if isAuthenticated() && resource.data.created_by == request.auth.uid;
    }

    match /group_members/{memberId} {
      allow read: if isAuthenticated();
      // FIX: Ensure user is adding THEMSELVES
      allow create: if isAuthenticated() && request.resource.data.system_id == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.system_id == request.auth.uid;
    }

    // ============================================
    // Messages Collection
    // ============================================
    match /messages/{messageId} {
      // FIX: Only sender or receiver (system or alter owner) can read
      allow read: if isAuthenticated() && (
        resource.data.senderId == request.auth.uid || 
        resource.data.systemId == request.auth.uid ||
        get(/databases/$(database)/documents/alters/$(resource.data.receiver_alter_id)).data.systemId == request.auth.uid
      );

      allow create: if isAuthenticated() && (
        (request.resource.data.systemId == request.auth.uid) || 
        (request.resource.data.senderId == request.auth.uid)
      );

      allow update: if isAuthenticated() && (
        (resource.data.systemId == request.auth.uid) ||
        (resource.data.senderId == request.auth.uid) ||
        // Allow recipient to mark as read
        (
             get(/databases/$(database)/documents/alters/$(resource.data.receiver_alter_id)).data.systemId == request.auth.uid &&
             request.resource.data.diff(resource.data).affectedKeys().hasOnly(['is_read'])
        )
      );

      allow delete: if isAuthenticated() && (
        (resource.data.systemId == request.auth.uid) ||
        (resource.data.senderId == request.auth.uid)
      );
    }

    // ============================================
    // Conversations
    // ============================================
    match /conversations/{conversationId} {
      allow read: if isAuthenticated() && 
        (resource.data.participants != null && request.auth.uid in resource.data.participants);
      allow create: if isAuthenticated() && 
        (request.resource.data.participants != null && request.auth.uid in request.resource.data.participants);
      allow update: if isAuthenticated() && 
        (resource.data.participants != null && request.auth.uid in resource.data.participants);
      allow delete: if false;
    }

    match /conversation_participants/{participantId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.system_id == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.system_id == request.auth.uid;
      allow update: if false;
    }

    // ============================================
    // Follows
    // ============================================
    match /follows/{followId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.follower_id == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.follower_id == request.auth.uid;
      allow update: if false;
    }

    // ============================================
    // Public Profiles
    // ============================================
    match /public_profiles/{profileId} {
      allow read: if isAuthenticated() && (
        profileId == request.auth.uid || 
        resource.data.is_public == true
      );
      allow create: if isAuthenticated() && 
        profileId == request.auth.uid &&
        request.resource.data.system_id == request.auth.uid;
      allow update: if isAuthenticated() && profileId == request.auth.uid;
      allow delete: if isAuthenticated() && profileId == request.auth.uid;
    }

    // ============================================
    // Monetization
    // ============================================
    match /user_monetization/{userId} {
      allow read: if isAuthenticated() && userId == request.auth.uid;
      allow write: if false;
      match /credit_transactions/{transactionId} {
        allow read: if isAuthenticated() && userId == request.auth.uid;
        allow write: if false; 
      }
    }

    match /user_credits/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if false;
    }

    // ============================================
    // Notifications Collection
    // ============================================
    match /notifications/{notificationId} {
      // FIX: Secure read access to recipient only
      allow read: if isAuthenticated() && (
        resource.data.recipientId == request.auth.uid ||
        resource.data.targetSystemId == request.auth.uid
      );
      
      // Create: Allow any auth user (to send notification)
      allow create: if isAuthenticated();
      
      // Update: Recipient can mark as read
      allow update: if isAuthenticated() && (
        resource.data.recipientId == request.auth.uid ||
        resource.data.targetSystemId == request.auth.uid
      ) && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read', 'is_read']);
      
      // Delete: Recipient can delete
      allow delete: if isAuthenticated() && (
        resource.data.recipientId == request.auth.uid ||
        resource.data.targetSystemId == request.auth.uid
      );
    }

    // ============================================
    // Misc
    // ============================================
    match /feedbacks/{feedbackId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        resource.data.type == 'FEATURE' ||
        isAdmin()
      );
      allow update: if isAuthenticated() && (
        isAdmin() ||
        (
          resource.data.type == 'FEATURE' &&
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['votes', 'voteCount'])
        )
      );
      allow delete: if isAdmin();
    }

    match /stories/{storyId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.system_id == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.system_id == request.auth.uid;
      allow update: if isAuthenticated() && (
        resource.data.system_id == request.auth.uid || 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['viewers'])
      );
    }

    match /inner_worlds/{worldId} {
      allow read: if isOwner(resource);
      allow create: if isOwnerCreate();
      allow update, delete: if isOwner(resource);
    }

    match /inner_world_shapes/{shapeId} {
      allow read: if isOwner(resource);
      allow create: if isOwnerCreate();
      allow update, delete: if isOwner(resource);
    }

    match /story_highlights/{highlightId} {
      allow read: if isAuthenticated();
      allow create: if isOwnerCreate();
      allow update, delete: if isOwner(resource);
    }

    match /fcm_tokens/{tokenId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && tokenId.matches(request.auth.uid + '_.*');
    }

    match /subjects/{subjectId} {
      allow read: if isAuthenticated() && resource.data.systemId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.systemId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.systemId == request.auth.uid;
    }

    match /categories/{categoryId} {
      allow read: if isAuthenticated() && resource.data.systemId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.systemId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.systemId == request.auth.uid;
    }

    match /course_notes/{noteId} {
      allow read: if isAuthenticated() && resource.data.systemId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.systemId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.systemId == request.auth.uid;
    }

    match /system_chats/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
      match /messages/{messageId} {
        allow read, write: if isAuthenticated() && request.auth.uid == userId;
      }
    }

    match /system_tasks/{taskId} {
      allow read: if isAuthenticated() && resource.data.system_id == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.system_id == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.system_id == request.auth.uid;
    }

    // Landing Page
    match /early_signups/{signupId} {
      allow read: if true;
      allow create: if true;
      allow update: if false;
      allow delete: if false;
    }

    match /landing_stats/{statId} {
      allow read: if true;
      allow write: if false; 
    }
  }
}
