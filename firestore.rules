rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ============================================
    // Helper Functions
    // ============================================
    
    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Check if user owns the document via system_id or userId field
    function isOwner(resource) {
      return isAuthenticated() && (
        resource.data.system_id == request.auth.uid || 
        resource.data.userId == request.auth.uid ||
        resource.data.systemId == request.auth.uid
      );
    }
    
    // Check ownership for create operations
    function isOwnerCreate() {
      return isAuthenticated() && (
        request.resource.data.system_id == request.auth.uid ||
        request.resource.data.userId == request.auth.uid ||
        request.resource.data.systemId == request.auth.uid
      );
    }

    // Check for admin privileges
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/systems/$(request.auth.uid)).data.isAdmin == true;
    }

    // Check if a field is unchanged
    function isUnchanged(field) {
      return request.resource.data[field] == resource.data[field];
    }

    // ============================================
    // Systems Collection
    // üî¥ RISQUE DE S√âCURIT√â: EXPOSITION D'EMAILS
    // ============================================
    match /systems/{systemId} {
      // ‚ö†Ô∏è PROBL√àME CRITIQUE: Cette r√®gle expose les emails de tous les utilisateurs
      // aux autres utilisateurs authentifi√©s !
      //
      // LECTURE: Actuellement permissive pour compatibilit√© avec fonctionnalit√©s existantes
      // (affichage usernames sur posts, recherche, social features)
      //
      // üõ†Ô∏è SOLUTION RECOMMAND√âE (Sprint 4) :
      // 1. Migrer username, avatar, bio vers 'public_profiles' (collection existante)
      // 2. Mettre √† jour tous les services pour utiliser public_profiles au lieu de systems
      // 3. Restreindre systems √†: allow read: if systemId == request.auth.uid || isAdmin();
      //
      // TEMPORAIRE: Permissif pour ne pas casser les fonctionnalit√©s
      allow read: if isAuthenticated();

      // √âCRITURE: Propri√©taire uniquement (s√©curis√© ‚úÖ)
      allow write: if isAuthenticated() && request.auth.uid == systemId;

      // Friend Suggestions Subcollection
      match /friend_suggestions/{suggestionId} {
        allow read, write: if isAuthenticated() && request.auth.uid == systemId;
      }
    }

    // ============================================
    // Alters Collection
    // Read: All authenticated users (for social features, search, profiles)
    // Write: Only the owner
    // ============================================
    match /alters/{alterId} {
      // Read: any authenticated user can read alters (needed for social/search)
      // FIX: Implement visibility checks.
      // 1. Owner can always read.
      // 2. 'public' visibility -> everyone.
      // 3. 'friends' visibility -> check friendship.
      // 4. 'private' -> owner only.
      // FIX: Temporary relaxation to allow "Code Search". 
      // Allows any authenticated user to read alters if they know the ID or query by System ID.
      allow read: if isAuthenticated();
      allow create: if isOwnerCreate();
      allow update, delete: if isOwner(resource);
    }
    
    // ============================================
    // Posts Collection
    // ‚úÖ S√âCURIS√â: Respect de la visibilit√© (private/system/friends/public)
    // ============================================
    match /posts/{postId} {
      // LECTURE: Selon visibilit√© du post
      allow read: if isAuthenticated() && (
        // 1. Propri√©taire peut toujours lire ses propres posts
        resource.data.system_id == request.auth.uid ||

        // 2. Posts publics visibles par tous les utilisateurs authentifi√©s
        resource.data.visibility == 'public' ||

        // 3. Posts 'system' visibles uniquement par le m√™me syst√®me
        (resource.data.visibility == 'system' && resource.data.system_id == request.auth.uid)

        // ‚ö†Ô∏è LIMITATION: Posts 'friends' et 'private' non v√©rifiables via rules
        // Car v√©rifier l'amiti√© n√©cessiterait une query Firestore (non support√©e dans rules)
        // RECOMMANDATION: Utiliser Cloud Functions pour les feeds OU filtrage client strict
        // OU cr√©er une collection d√©normalis√©e 'friend_access' avec IDs pr√©visibles
      );

      // CR√âATION: Propri√©taire uniquement
      allow create: if isOwnerCreate();

      // MODIFICATION: Propri√©taire OU modification des likes/comments (validation stricte)
      // ‚ö†Ô∏è TODO: Impl√©menter transactions c√¥t√© client pour √©viter race conditions sur likes
      allow update: if isOwner(resource) || (
        isAuthenticated() &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'comments_count'])
      );

      // SUPPRESSION: Propri√©taire uniquement
      allow delete: if isOwner(resource);
      
      // ============================================
      // Comments Sub-Collection
      // ============================================
      match /comments/{commentId} {
        // Lecture: tout utilisateur authentifi√© (plus s√©curis√©)
        allow read: if isAuthenticated();
        
        // Cr√©ation: tout utilisateur authentifi√©
        allow create: if isAuthenticated();
        
        // Suppression: auteur du commentaire ou propri√©taire du post
        allow delete: if isAuthenticated() && (
          request.auth.uid == resource.data.author_id || 
          isOwner(get(/databases/$(database)/documents/posts/$(postId)))
        );
      }
    }
    
    // ... (rest of file) ...

    
    // ============================================
    // Emotions Collection
    // S√âCURIS√â: Seul le propri√©taire peut acc√©der √† ses √©motions
    // ============================================
    match /emotions/{emotionId} {
      allow read: if isOwner(resource);
      allow create: if isOwnerCreate();
      allow update, delete: if isOwner(resource);
    }

    // ============================================
    // Journal Entries Collection
    // ============================================
    match /journal_entries/{entryId} {
      allow read: if isOwner(resource);
      allow create: if isOwnerCreate();
      allow update, delete: if isOwner(resource);
    }

    // ============================================
    // Fronting History Collection
    // ============================================
    match /fronting_history/{entryId} {
      allow read: if isOwner(resource);
      allow create: if isOwnerCreate();
      allow update, delete: if isOwner(resource);
    }

    // ============================================
    // Tasks Collection
    // ============================================
    match /tasks/{taskId} {
      allow read: if isOwner(resource);
      allow create: if isOwnerCreate();
      allow update, delete: if isOwner(resource);
    }

    // ============================================
    // Roles Collection
    // ============================================
    match /roles/{roleId} {
      allow read: if isOwner(resource);
      allow create: if isOwnerCreate();
      allow update, delete: if isOwner(resource);
    }

    // ============================================
    // Subsystems Collection
    // Pour organiser les alters en groupes (sous-syst√®mes)
    // ============================================
    match /subsystems/{subsystemId} {
      // Read: owner can read their subsystems
      allow read: if isAuthenticated() && 
        resource.data.parent_system_id == request.auth.uid;
      
      // Create: owner can create subsystems
      allow create: if isAuthenticated() && 
        request.resource.data.parent_system_id == request.auth.uid;
      
      // Update/Delete: owner only
      allow update, delete: if isAuthenticated() && 
        resource.data.parent_system_id == request.auth.uid;
    }


    // ============================================
    // Help Requests Collection
    // ============================================
    match /help_requests/{requestId} {
      allow read: if isOwner(resource);
      allow create: if isOwnerCreate();
      allow update, delete: if isOwner(resource);
    }

    // ============================================
    // Groups Collection (Sprint 5)
    // ============================================
    match /groups/{groupId} {
      // Any auth user can see groups for now (Public discovery)
      allow read: if isAuthenticated();
      // Only auth user can create
      allow create: if isAuthenticated();
      // Creator OR existing members can update (add members)
      allow update: if isAuthenticated() && (
        resource.data.created_by == request.auth.uid ||
        request.auth.uid in resource.data.members
      );
      // Only creator can delete
      allow delete: if isAuthenticated() && resource.data.created_by == request.auth.uid;
    }

    // ============================================
    // Group Members Collection
    // ============================================
    match /group_members/{memberId} {
      // Can read memberships if auth
      allow read: if isAuthenticated();
      // Can create if: adding yourself OR if you're already a member of the group
      // FIX: Ensure user is adding THEMSELVES (system_id matches auth)
      allow create: if isAuthenticated() && request.resource.data.system_id == request.auth.uid;
      // Can leave (delete) if it's your own membership
      allow delete: if isAuthenticated() && resource.data.system_id == request.auth.uid;
      // No updates allowed (must leave and rejoin)
    }

    // ============================================
    // Messages Collection
    // ============================================
    match /messages/{messageId} {
      // FIX: Only sender or receiver (system or alter owner) can read
      allow read: if isAuthenticated() && (
        resource.data.senderId == request.auth.uid || 
        resource.data.systemId == request.auth.uid ||
        // Check if the current user owns the receiver alter
        get(/databases/$(database)/documents/alters/$(resource.data.receiver_alter_id)).data.system_id == request.auth.uid
      );

      // Allow create if systemId matches (for multi-alter systems) OR senderId (legacy) matches
      allow create: if isAuthenticated() && (
        (request.resource.data.systemId == request.auth.uid) || 
        (request.resource.data.senderId == request.auth.uid)
      );
      allow update: if isAuthenticated() && (
        (resource.data.systemId == request.auth.uid) ||
        (resource.data.senderId == request.auth.uid) ||
        // Allow recipient to mark as read
        (
             // Check if user is the receiver system (using systemId logic or alter ownership)
             // Since messages have receiver_alter_id, we check if that alter belongs to auth user
             get(/databases/$(database)/documents/alters/$(resource.data.receiver_alter_id)).data.system_id == request.auth.uid &&
             request.resource.data.diff(resource.data).affectedKeys().hasOnly(['is_read'])
        )
      );
      allow delete: if isAuthenticated() && (
        (resource.data.systemId == request.auth.uid) ||
        (resource.data.senderId == request.auth.uid)
      );
    }

    // ============================================
    // Conversations Collection
    // S√âCURIS√â: Seuls les participants peuvent acc√©der
    // ============================================
    match /conversations/{conversationId} {
      // Lecture autoris√©e si l'utilisateur est participant
      allow read: if isAuthenticated() && 
        (resource.data.participants != null && request.auth.uid in resource.data.participants);
      // Cr√©ation autoris√©e si l'utilisateur s'inclut dans les participants
      allow create: if isAuthenticated() && 
        (request.resource.data.participants != null && request.auth.uid in request.resource.data.participants);
      // Modification autoris√©e si participant existant
      allow update: if isAuthenticated() && 
        (resource.data.participants != null && request.auth.uid in resource.data.participants);
      allow delete: if false; // D√©sactiver la suppression pour pr√©server l'historique
    }

    // ============================================
    // Conversation Participants Collection
    // S√âCURIS√â: Lecture si auth, cr√©ation/suppression de ses propres participations
    // ============================================
    match /conversation_participants/{participantId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.system_id == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.system_id == request.auth.uid;
      allow update: if false; // Pas de modification, uniquement cr√©ation/suppression
    }

    // ============================================
    // Follows Collection (Syst√®me de suivi social)
    // ============================================
    match /follows/{followId} {
      // Lecture: tout utilisateur authentifi√© peut voir les follows
      allow read: if isAuthenticated();
      
      // Cr√©ation: uniquement si l'utilisateur est le follower
      allow create: if isAuthenticated() && 
        request.resource.data.follower_id == request.auth.uid;
      
      // Suppression: uniquement si l'utilisateur est le follower  
      allow delete: if isAuthenticated() && 
        resource.data.follower_id == request.auth.uid;
      
      // Pas de modification des follows
      allow update: if false;
    }

    // ============================================
    // Public Profiles Collection (Profils publics)
    // ============================================
    match /public_profiles/{profileId} {
      // Read: own profile always, OR anyone can read if is_public is true
      // Use profileId to check ownership (profileId == systemId)
      allow read: if isAuthenticated() && (
        profileId == request.auth.uid || 
        resource.data.is_public == true
      );
      
      // Create: only the owner can create their profile (profileId must match auth uid)
      allow create: if isAuthenticated() && 
        profileId == request.auth.uid &&
        request.resource.data.system_id == request.auth.uid;
      
      // Update: only the owner
      allow update: if isAuthenticated() && 
        profileId == request.auth.uid;
      
      // Delete: only the owner
      allow delete: if isAuthenticated() && 
        profileId == request.auth.uid;
    }

    // ============================================
    // User Monetization Collection
    // ============================================
    match /user_monetization/{userId} {
      // Read: Owner only
      allow read: if isAuthenticated() && userId == request.auth.uid;
      // Write: BLOCKED (Must use Cloud Functions)
      allow write: if false;
      
      match /credit_transactions/{transactionId} {
        allow read: if isAuthenticated() && userId == request.auth.uid;
        allow write: if false; 
      }
    }

    match /user_credits/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if false;
    }

    // ============================================
    // System Chats Collection (Team Chat)
    // ============================================
    match /system_chats/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;

      match /messages/{messageId} {
        allow read, write: if isAuthenticated() && request.auth.uid == userId;
      }
    }

    // ============================================
    // Tasks Collection
    // ============================================
    match /system_tasks/{taskId} {
      allow read: if isAuthenticated() && resource.data.system_id == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.system_id == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.system_id == request.auth.uid;
    }

    // ============================================
    // Fronting History Collection
    // ============================================
    match /fronting_history/{historyId} {
      allow read: if isAuthenticated() && resource.data.system_id == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.system_id == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.system_id == request.auth.uid;
    }



    // ============================================
    // Friend Requests Collection
    // NOTE: senderId and receiverId are Alter IDs, NOT user auth UIDs!
    // We use systemId to track ownership.
    // ============================================
    match /friend_requests/{requestId} {
      // Read: any authenticated user can read friend requests
      // FIX: Restrict read to sender or receiver system.
      allow read: if isAuthenticated() && (
        resource.data.systemId == request.auth.uid || 
        resource.data.receiverSystemId == request.auth.uid ||
        // Legacy/Alter support
        get(/databases/$(database)/documents/alters/$(resource.data.receiverId)).data.systemId == request.auth.uid
      );
      
      // Create: sender's system must be authenticated, force server timestamp
      allow create: if isAuthenticated() && 
                    request.resource.data.systemId == request.auth.uid &&
                    request.resource.data.createdAt == request.time;
      
      // Update: ONLY receiver can update (to accept/reject)
      // We check if the auth user is the receiver system
      allow update: if isAuthenticated() && (
         resource.data.receiverSystemId == request.auth.uid ||
         // Fallback if systemId not directly on doc (lookup via receiverId)
         get(/databases/$(database)/documents/alters/$(resource.data.receiverId)).data.systemId == request.auth.uid
      ) && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status']);
      
      // Delete: sender (cancel) or receiver (reject/cleanup)
      allow delete: if isAuthenticated() && (
         resource.data.systemId == request.auth.uid || 
         resource.data.receiverSystemId == request.auth.uid
      );
    }

    // ============================================
    // Friendships Collection
    // Read: any authenticated user (needed for bilateral friend checks)
    // Create: any authenticated user (for bilateral creation)
    // Delete: only the owner of that side of the friendship
    // ============================================
    match /friendships/{friendshipId} {
      // Read: any authenticated user can read friendships 
      // (needed for checkStatus to work across systems)
      allow read: if isAuthenticated();
      
      // Create: user must be one of the systems involved
      allow create: if isAuthenticated() && (
        request.resource.data.systemId == request.auth.uid || 
        request.resource.data.friendSystemId == request.auth.uid
      );
      
      // Delete: can only delete your own friendships
      allow delete: if isAuthenticated() && (
        resource.data.systemId == request.auth.uid ||
        resource.data.system_id == request.auth.uid
      );
    }


    // ============================================
    // Notifications Collection
    // ============================================
    match /notifications/{notificationId} {
      // Read: Recipient is User UID OR Recipient is an Alter owned by User (via denormalized targetSystemId)
      // FIX: Ensure only the recipient or the target system can read notifications
      allow read: if isAuthenticated() && (
        resource.data.recipientId == request.auth.uid ||
        resource.data.targetSystemId == request.auth.uid
      );
      
      // Create: Allow any authenticated user to send a notification
      // Ideally restrict so you can't spoof senderId, but recipient check is most important for privacy.
      allow create: if isAuthenticated();
      
      // Update: Recipient can mark as read
      allow update: if isAuthenticated() && (
        resource.data.recipientId == request.auth.uid ||
        resource.data.targetSystemId == request.auth.uid
      ) && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read', 'is_read']);
      
      // Delete: Recipient can delete
      allow delete: if isAuthenticated() && (
        resource.data.recipientId == request.auth.uid ||
        resource.data.targetSystemId == request.auth.uid
      );
    }

    // ============================================
    // Feedbacks Collection
    // ‚úÖ S√âCURIS√â: Support bugs ET features avec votes et commentaires
    // ============================================
    match /feedbacks/{feedbackId} {
      // CR√âATION: Tout utilisateur authentifi√© peut cr√©er un feedback
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;

      // LECTURE: Propri√©taire, Admin, ou PUBLIC si c'est une FEATURE
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        resource.data.type == 'FEATURE' ||
        isAdmin()
      );

      // UPDATE: Admin (full access) OU User (Votes sur bugs ET features)
      // ‚úÖ FIX: Permettre votes sur bugs aussi pour montrer la fr√©quence
      allow update: if isAuthenticated() && (
        isAdmin() ||
        // User peut voter sur n'importe quel feedback (bug ou feature)
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['votes', 'voteCount'])
      );

      // SUPPRESSION: Admin uniquement
      allow delete: if isAdmin();

      // ============================================
      // Comments Sub-Collection (pr√©cisions/r√©ponses)
      // ============================================
      match /comments/{commentId} {
        // LECTURE: Tout utilisateur authentifi√© peut lire les commentaires
        allow read: if isAuthenticated();

        // CR√âATION: Tout utilisateur authentifi√© peut commenter
        allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;

        // UPDATE: Interdit (commentaires immutables)
        allow update: if false;

        // SUPPRESSION: Auteur du commentaire ou admin
        allow delete: if isAuthenticated() && (
          resource.data.userId == request.auth.uid ||
          isAdmin()
        );
      }
    }

    // ============================================
    // Stories Collection
    // ============================================
    match /stories/{storyId} {
      // Read: any authenticated user
      allow read: if isAuthenticated();
      
      // Create: user must own the valid system_id
      allow create: if isAuthenticated() && request.resource.data.system_id == request.auth.uid;
      
      // Delete: only owner
      allow delete: if isAuthenticated() && resource.data.system_id == request.auth.uid;
      
      // Update: Owner OR Viewers (to add themselves to viewers array)
      allow update: if isAuthenticated() && (
        resource.data.system_id == request.auth.uid || 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['viewers'])
      );
    }

    // ============================================
    // Inner World Collections
    // ============================================
    match /inner_worlds/{worldId} {
      allow read: if isOwner(resource);
      allow create: if isOwnerCreate();
      allow update, delete: if isOwner(resource);
    }

    match /inner_world_shapes/{shapeId} {
      allow read: if isOwner(resource);
      allow create: if isOwnerCreate();
      allow update, delete: if isOwner(resource);
    }

    // ============================================
    // Story Highlights Collection
    // ============================================
    match /story_highlights/{highlightId} {
      allow read: if isAuthenticated();
      allow create: if isOwnerCreate();
      allow update, delete: if isOwner(resource);
    }

    // ============================================
    // FCM Tokens Collection
    // ============================================
    match /fcm_tokens/{tokenId} {
      // Read: Authenticated users need to read tokens to send pushes (client-side implementation)
      allow read: if isAuthenticated();
      
      // Write: User can only write their own token matches their UID
      // Doc ID format is usually ${userId}_${deviceId}
      allow write: if isAuthenticated() && tokenId.matches(request.auth.uid + '_.*');
    }

    // ============================================
    // Courses - Subjects Collection
    // ============================================
    match /subjects/{subjectId} {
      allow read: if isAuthenticated() && resource.data.systemId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.systemId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.systemId == request.auth.uid;
    }

    // ============================================
    // Courses - Categories Collection
    // ============================================
    match /categories/{categoryId} {
      allow read: if isAuthenticated() && resource.data.systemId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.systemId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.systemId == request.auth.uid;
    }

    // ============================================
    // Courses - Notes Collection
    // ============================================
    match /course_notes/{noteId} {
      allow read: if isAuthenticated() && resource.data.systemId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.systemId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.systemId == request.auth.uid;
    }

    // ============================================
    // Landing Page - Early Signups Collection
    // Public write for email collection (no auth required)
    // Public read for duplicate detection in transactions
    // S√âCURIS√â: Signups sont immuables (no updates)
    // ============================================
    match /early_signups/{signupId} {
      // ‚úÖ Anyone can read (needed for transaction.get() duplicate check)
      // Note: emails are hashed/sanitized as doc IDs, raw data not exposed
      allow read: if true;
      
      // Anyone can create a signup (landing page visitors)
      allow create: if true;
      
      // ‚úÖ S√âCURIS√â: Updates interdits - signups sont immuables
      allow update: if false;
      
      // No one can delete
      allow delete: if false;
    }

    // ============================================
    // Landing Page - Stats Collection
    // Counter document for real-time signup count
    // S√âCURIS√â: Public read, write via Cloud Function uniquement
    // ============================================
    match /landing_stats/{statId} {
      // Anyone can read stats (for real-time counter)
      allow read: if true;
      
      // ‚úÖ S√âCURIS√â: Write d√©sactiv√© pour clients directs
      // Utiliser Cloud Function pour atomic increment
      // FIX: Disable client-side write completely to enforce Cloud Function usage
      allow write: if false; 
    }
  }
}
