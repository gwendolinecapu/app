rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper to check auth
    function isAuthenticated() {
      return request.auth != null;
    }

    // Avatars: Public read, authenticated user write
    match /avatars/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Post images: Public read, authenticated user write
    match /posts/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Profile images - in case they use a different path
    match /profiles/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // Images folder - catch-all for any image uploads
    match /images/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    // Visual DNA images
    match /visual_dna/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Stories media
    match /stories/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }


  }
}
